{
  "name": "@flame/core",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:smoke": "bun test tests/smoke",
    "test:coverage": "bun test --coverage",
    "test:e2e": "docker compose up --build --exit-code-from parent",
    "lint": "bun lint",
    "lint:effect": "effect-language-service diagnostics --format pretty --project ./tsconfig.json",
    "build": "bun build src/index.ts --outdir dist",
    "typecheck": "bun x tsc --noEmit",
    "prepare": "effect-language-service patch"
  },
  "dependencies": {
    "effect": "^3.6.5",
    "superjson": "^2.2.2"
  },
  "devDependencies": {
    "@effect/language-service": "^0.62.4",
    "bun-types": "^1.3.5",
    "typescript": "^5.6.3"
  }
}
